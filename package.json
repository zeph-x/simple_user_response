    "chai": "^4.3.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.2.0",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.15",
    "supertest": "^6.1.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  }
